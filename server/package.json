  "dependencies": {
    "@fastify/static": "8.2.0",
    "@playwright/test": "1.55.1",
    "fastify": "5.6.1",
    "mhtml2html": "3.0.0",
    "pino": "9.11.0",
    "pixelmatch": "7.1.0",
    "playwright": "1.55.1",
    "pngjs": "7.0.0",
    "tar": "7.5.1"
  },
  "devDependencies": {
    "jest": "30.2.0",
    "prettier": "3.6.2",
    "supervisor": "0.12.0"
  },
  "jest": {
    "sandboxInjectedGlobals": [
      "Math"
    ],
    "testEnvironment": "node"
  }
